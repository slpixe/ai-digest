{
  "name": "@slpixe/ai-txt",
  "version": "1.1.4",
  "description": "CLI tool to aggregate files into a single Markdown file",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "ai-txt": "dist/index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "prepublishOnly": "npm run build",
    "test": "jest --config jest.config.js",
    "local-run": "npx ai-txt --whitespace-removal --show-output-files",
    "publish": "npm publish --access public"
  },
  "keywords": [
    "cli",
    "aggregate",
    "markdown"
  ],
  "author": "@slpixe",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "glob": "^11.0.1",
    "ignore": "^7.0.3",
    "isbinaryfile": "^5.0.4",
    "js-tiktoken": "^1.0.16",
    "p-limit": "^6.2.0",
    "winston": "^3.17.0"
  },
  "homepage": "https://github.com/slpixe/ai-txt#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slpixe/ai-txt.git"
  },
  "bugs": {
    "url": "https://github.com/slpixe/ai-txt/issues"
  }
}
